<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_circle_white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x5"/>
        <com.qixiaoyi.cariyou.widget.CircleImageView
            android:id="@+id/civ_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@id/iv_menu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/profile_darkcyan"
            android:background="@color/white"
            app:border_color2="@android:color/transparent"
            app:border_width="1dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_below="@+id/civ_head"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x16"
                android:layout_marginTop="4dp"
                android:text="jemilve"
                android:textStyle="bold"
                android:textColor="@color/black_80"
                />
            <TextView
                android:id="@+id/tv_papar"
                android:text="Position Papar"
                android:textSize="@dimen/x15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/tv_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x12"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/x25"
                android:text="Joined since 59 days ago"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top">
<!--
  //控制登录用户名图标大小
        EditText editText1 = (EditText) findViewById(R.id.editTxt_userName);
        Drawable drawable1 = getResources().getDrawable(R.drawable.login_user);
        drawable1.setBounds(0, 0, 40, 40);//第一0是距左边距离，第二0是距上边距离，40分别是长宽
        editText1.setCompoundDrawables(drawable1, null, null, null);//只放左边
-->
        <LinearLayout
            android:id="@+id/ll_h1"
            android:layout_marginTop="@dimen/x15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/tv_posted"
                android:text="Posted"
                android:drawableTop="@drawable/posted_darkgrey"
                style="@style/mainbottom"
                />
            <TextView
                android:id="@+id/tv_favourite"
                android:text="Favourite"
                android:drawableTop="@drawable/star_favourite_darkgrey"
                style="@style/mainbottom"
                />
            <TextView
                android:id="@+id/tv_history"
                android:text="Browse History"
                android:drawableTop="@drawable/browse_history_darkgrey"
                style="@style/mainbottom"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_h2"
            android:layout_below="@id/ll_h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="@dimen/x15"
            >
            <TextView
                android:id="@+id/tv_point"
                android:text="Point"
                android:drawableTop="@drawable/points_darkgrey"
                style="@style/mainbottom"
                />
            <TextView
                android:id="@+id/tv_select2"
                android:text="Favourite"
                android:drawableTop="@drawable/star_favourite_darkgrey"
                style="@style/mainbottom"
                />
            <TextView
                android:id="@+id/tv_redeem"
                android:text="Redeem"
                android:drawableTop="@drawable/redeem_darkgrey"
                style="@style/mainbottom"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_h2"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:background="@color/gray_80"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_recruitment"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Recruitment"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:background="@color/black"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Recruitment"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <include layout="@layout/home_bottom"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>