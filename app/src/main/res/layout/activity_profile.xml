<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qixiaoyi.cariyou.module.ProfileActivity">
<Toolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_white_left"
            android:id="@+id/iv_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_left"
            android:layout_centerVertical="true"
            android:textSize="16sp"

            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:text="Profile Information"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Skip"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </RelativeLayout>
</Toolbar>
    <LinearLayout
    style="@style/Profilelinearlayout"
    >

        <TextView
            style="@style/Profiletextview"
            android:text="Basic Information"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/textView2"/>
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="*Company Name"
            android:layout_gravity="center_vertical"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_darkcyan_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:id="@+id/iv_right"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_darkcyan"
                android:layout_toLeftOf="@id/iv_right"
                android:layout_marginRight="30dp"
                />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"/>
    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="Username"
            />
        <EditText
            android:hint="Enter Username"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="UseStorename"
            />
        <EditText
            android:hint="Enter Storename"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >

        <TextView
            style="@style/Profiletextview"
            android:text="Gender"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView"/>

        <RelativeLayout
           style="@style/inputrl">
            <ImageView
                android:id="@+id/iv_right2"
                style="@style/right"
                />
            <EditText
                style="@style/inputet2"
                android:layout_marginLeft="@dimen/x4"
                android:layout_toLeftOf="@id/iv_right2"
                android:hint="Select Gender"
                />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="Birthday"
            />
        <EditText
            android:hint="dd/mm/yyyy"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="Mobile Number"
            />
        <EditText
            android:hint="Enter Mobile Number"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >

        <TextView
            style="@style/Profiletextview"
            android:text="Gender"
            android:layout_gravity="center_vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Certified"
                android:background="@drawable/bt_shape_yellow"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:padding="3dp"
                android:textSize="13.5sp"
                android:id="@+id/tv_certifited"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="cvlin79@gmail.com"
                android:textSize="13.5sp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/editText"/>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="Mobile Number"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_weight="3"
           android:layout_marginRight="30dp"
           android:padding="6dp"
           android:layout_gravity="center_vertical"
           >

           <TextView
               android:id="@+id/tv_head_a"
               android:text="Private"
               android:textColor="@color/black_80"
               android:background="@drawable/tvshape1"
               android:layout_weight="1"
               style="@style/style" />
           <TextView
               android:id="@+id/tv_head_c"
               android:background="@drawable/tvshape4"
               android:textColor="@color/white"
               android:text="Private"
               android:layout_weight="1"
               style="@style/style"
               android:visibility="gone" />

           <TextView
               android:text="Agent"
               android:background="@color/colorPrimaryDark"
               android:layout_weight="1"
               style="@style/style"
               />

           <TextView
               android:id="@+id/tv_head_b"
               android:text="Company"
               android:background="@drawable/tvshape2"
               android:textColor="@color/black_80"
               android:layout_weight="1"
               style="@style/style" />

           <TextView
               android:text="Company"
               android:textColor="@color/white"
               android:background="@drawable/tvshape3"
               android:visibility="gone"
               android:id="@+id/tv_head_d"
               android:layout_weight="1"
               style="@style/style"
                 />
       </LinearLayout>
    </LinearLayout>

    <include layout="@layout/profile_bigfenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="*Company Name"
            />
        <EditText
            android:hint="Enter Storename"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>

    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="*Company Reg"
            />
        <EditText
            android:hint="Enter Co Registration No"
            style="@style/Profileedittext"
            />
    </LinearLayout>

    <include layout="@layout/profile_fenge"/>
    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="*Address "
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/nearby_darkcyan"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:id="@+id/iv_nearby"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Enter Company Address"
                android:background="@null"
                android:textSize="13.5sp"
                android:layout_toLeftOf="@id/iv_nearby"
                />
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>
    <LinearLayout
        style="@style/Profilelinearlayout"
        >
        <TextView
            style="@style/Profiletextview"
            android:text="Office Phone"
            />
        <EditText
            android:hint="Enter Office Phone"
            style="@style/Profileedittext"
            />
    </LinearLayout>
    <include layout="@layout/profile_fenge"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="11sp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bt_shape"
        android:text="Update now"
        android:id="@+id/bt_singup"
        />
</LinearLayout>
