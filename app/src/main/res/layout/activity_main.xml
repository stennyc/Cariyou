<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.qixiaoyi.cariyou.module.MainActivity">
<Toolbar
    android:id="@+id/tb_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:layout_weight="1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginTop="5dp">
            <ImageView
                android:id="@+id/iv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_circle_grey"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search_grey"
                android:layout_toLeftOf="@id/iv_menu"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>

    </LinearLayout>

</Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_80"
        android:layout_below="@id/tb_main"
        android:layout_marginTop="5dp"/>
    <!--<fragment-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--/>-->
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/tv_select1"
            android:text="ddd"
            android:drawableTop="@drawable/arrow_darkcyan_left"
            style="@style/mainbottom"
            />
        <TextView
            android:id="@+id/tv_select2"
            android:layout_weight="1"
            android:text="ddd"
            android:drawableTop="@drawable/publish_darkcyan"
            style="@style/mainbottom"
            />
        <TextView
            android:id="@+id/tv_select3"
            android:text="ddd"
            android:drawableTop="@drawable/complaint_darkcyan"
            style="@style/mainbottom"
            />
        <TextView
            android:id="@+id/tv_select4"
            android:text="ddd"
            android:drawableTop="@drawable/profile_white"

            />
        <TextView
            android:id="@+id/tv_select5"
            android:text="ddd"
            android:drawableTop="@drawable/arrow_darkcyan_right"
            style="@style/mainbottom"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_80"
        android:layout_alignTop="@id/ll_bottom"/>
</RelativeLayout>
