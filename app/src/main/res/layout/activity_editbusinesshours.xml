<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qixiaoyi.cariyou.module.T11.EditbusinesshoursActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Edit business hours"/>
        </RelativeLayout>
    </Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/x15"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x5">
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
    <TextView
        android:text="SUN"
        style="@style/tvsty"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10">
        <EditText
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:text="Opens"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x1"
            android:text="-"
            android:background="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:layout_width="@dimen/x100"
            android:layout_height="wrap_content"
            android:text="Closes"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/x"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x15"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:text="+"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/tvcirshape"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open 24 hours"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/x70"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:layout_marginTop="45dp"
        android:background="@drawable/bt_shape"
        android:text="+ Add Another Set of Days"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:id="@+id/bt_singup"
        android:textColor="@color/white"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_alignParentBottom="true"
            android:text="Save"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@color/colorPrimaryDark"/>
    </RelativeLayout>
</LinearLayout>
